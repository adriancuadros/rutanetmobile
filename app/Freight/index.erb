<div id="pageTitle">
	<h1>Cargas</h1>
</div>

<div id="toolbar">
    <div id="leftItem" class="regularButton"><%= link_to "Atras", url_for(:controller => 'Freight', :action => 'search') %></div>
	<div id="rightItem" class="regularButton">
		<%= link_to "<img src='/public/images/reloadwhite.png'>", url_for(:controller => 'Freight', :action => 'do_search') %>
	</div>
</div>

<div id="content">

	<% unless @msg.empty? %>
        <div id='app_message'>
			<%= verbose_error_message(@msg) %>
		</div>
    <% end %>

    <ul>
        <% @freights.each do |freight| %>
	       <li>
	           <a href="<%= url_for :action => :show, :id => freight.object %>">
				<div class='freight_info'>
					 <span class="title">
						<%= format_city freight.origin_name.capitalize %> <img src="/public/images/arrow.png"/ border="none" class="arrow"> <%= format_city freight.destination_name.capitalize %>
					</span>
					<span class="subtitle">
						<img src="/public/images/calendario.png"/ border="none" class="icon">
						<strong><%= format_date freight.date_departure %></strong> &nbsp;
						<img src="/public/images/pesas.png"/ border="none" class="icon"><%= freight.weight %> <%= freight.weight_unit %>  &nbsp; 
						<%= freight.category.capitalize %>
					</span>
				</div>
				<span class="disclosure_indicator"></span>
	           </a>
	       </li>
        <% end %>

		<% unless @no_more_freights %>
			<li>
				   <a href="<%= url_for :action => :do_search, :query => {:page => (@search.page.to_i + 1)} %>">
					<div class='freight_info'  id='more_freights'>
						 <span class="title">
							M&aacute;s cargas
						</span>
						<span style='font-size:20px;font-weight:bold;'>...</span>
					</div>
		           </a>
			</li>
		<% end %>

    </ul>
</div>