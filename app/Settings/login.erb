  <h1>Rutanet</h1>
</div>

<div id="toolbar">
	
</div>

<div id="content">
    <form method="POST" action="<%= url_for :action => :do_login %>">

        <% if @msg %>
            <p style="color:#ff0000"><%= verbose_error_message(@msg) %></p>
        <% end %>

        <ul>
            <li>
                <label for="login" class="fieldLabel">Correo electr&oacute;nico</label>
                <input type="text" name="login" <%= placeholder( "Correo electr&oacute;nico" ) %> />
            </li>

            <li>
                <label for="password" class="fieldLabel">Contrase&ntilde;a</label>
                <input type="password" name="password" <%= placeholder( "Contrase&ntilde;a" ) %> />
            </li>
        </ul>
        <input type="submit" class="standardButton" value="Entrar" />
    </form>
</div>
